@model MyGymSystem.Models.Trainer

@{
    ViewData["Title"] = "Profile";
    ViewData["Subtitle"] = "View and update your profile information";
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}

<section class="py-4">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-lg-9">

                <div class="td-card p-4 p-md-5">

                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- Hidden key -->
                        <input type="hidden" asp-for="Trainerid" />

                        <!-- TOP: Image + Name + Camera Icon -->
                        <div class="d-flex align-items-center gap-3 mb-4">
                            <div class="position-relative td-profile-wrapper">
                                <img src="@Url.Content(!string.IsNullOrEmpty(Model.Imagepath)
                                        ? $"~/Images/{Model.Imagepath}"
                                        : "~/Images/default.jpg")"
                                     alt="Profile"
                                     class="td-profile-img" />

                                <!-- Camera triggers hidden ImageFilet input -->
                                <label for="ImageFilet"
                                       class="td-camera-btn"
                                       title="Change picture">
                                    <i class="bi bi-camera-fill"></i>
                                </label>
                            </div>

                            <div>
                                <h4 class="mb-1 fw-bold">@Model.Firstname @Model.Lastname</h4>
                                <p class="text-muted mb-0">Trainer Profile</p>
                                <small class="text-muted">Click the camera to change your picture</small>
                            </div>
                        </div>

                        <!-- Hidden file input -->
                        <input asp-for="ImageFilet" type="file" class="d-none" id="ImageFilet" />
                        <span asp-validation-for="ImageFilet" class="text-danger"></span>

                        <hr class="my-4" />

                        <!-- NAME -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Firstname" class="form-label"></label>
                                <input asp-for="Firstname" class="form-control td-input" />
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Lastname" class="form-label"></label>
                                <input asp-for="Lastname" class="form-control td-input" />
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- EMAIL & PHONE -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control td-input" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phonenumber" class="form-label"></label>
                                <input asp-for="Phonenumber" class="form-control td-input" />
                                <span asp-validation-for="Phonenumber" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Specialization -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Specialization" class="form-label"></label>
                                <input asp-for="Specialization" class="form-control td-input" />
                                <span asp-validation-for="Specialization" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <!-- ACCOUNT -->
                        <h5 class="mb-3 fw-semibold">Account</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Username" class="form-label">Username</label>
                                <input name="Username"
                                       id="Username"
                                       class="form-control td-input"
                                       value="@ViewBag.Username" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="Password" class="form-label">Password</label>
                                <input name="Password"
                                       id="Password"
                                       class="form-control td-input"
                                       type="password"
                                       value="@ViewBag.Password" />
                            </div>
                        </div>

                        <!-- BUTTONS -->
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Dashboard" class="btn td-btn-outline">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn td-btn-primary text-white">
                                <i class="bi bi-check2-circle"></i> Save Changes
                            </button>
                        </div>

                    </form>

                </div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
