@model  MyGymSystem.Join.TrainerDashboardVM
@{
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
    ViewData["Title"] = "Dashboard";
    ViewData["Subtitle"] = "Quick overview of your members and workout plans";
}

<div class="row g-3">
    <div class="col-12 col-md-4">
        <div class="td-card td-stat">
            <div>
                <div class="label">My Members</div>
                <div class="num">@Model.MyMembersCount</div>
                <a class="small text-decoration-none" asp-action="MyMembers">View members →</a>
            </div>
            <div class="td-icon"><i class="bi bi-people"></i></div>
        </div>
    </div>

    <div class="col-12 col-md-4">
        <div class="td-card td-stat">
            <div>
                <div class="label">Workout Plans</div>
                <div class="num">@Model.TotalPlans</div>
                <a class="small text-decoration-none" asp-action="MyPlans">Manage plans →</a>
            </div>
            <div class="td-icon"><i class="bi bi-journal-text"></i></div>
        </div>
    </div>

    <div class="col-12 col-md-4">
        <div class="td-card td-stat">
            <div>
                <div class="label">Active Plans</div>
                <div class="num">@Model.ActivePlans</div>
                <span class="small text-muted">Status = Active</span>
            </div>
            <div class="td-icon"><i class="bi bi-check2-circle"></i></div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-12 col-lg-8">
        <div class="td-card p-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Recent Workout Plans</h5>
                <a asp-action="MyPlans" class="small text-decoration-none">View all</a>
            </div>

            @if (!Model.RecentPlans.Any())
            {
                <div class="text-muted p-3">
                    No workout plans yet.
                    <div class="mt-2">
                        <a class="btn td-btn-primary text-white" asp-action="MyMembers">
                            <i class="bi bi-plus-circle"></i> Create your first plan
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>Member</th>
                                <th>Plan</th>
                                <th>Start</th>
                                <th>Status</th>
                                <th class="text-end"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.RecentPlans)
                            {
                                <tr>
                                    <td>@p.MemberName</td>
                                    <td>@p.Planname</td>
                                    <td>@(p.Startdate?.ToString("yyyy-MM-dd") ?? "-")</td>
                                    <td>
                                        @if (p.Status ?? false)
                                        {
                                            <span class="badge td-badge-active rounded-pill">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge text-bg-secondary rounded-pill">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-action="EditWorkoutPlan"
                                           asp-route-id="@p.Workoutplanid"
                                           asp-route-memberId="@p.Memberid">
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="td-card p-3">
            <h5 class="mb-2">Quick Actions</h5>
            <div class="d-grid gap-2">
                <a class="btn td-btn-primary text-white" asp-action="MyMembers">
                    <i class="bi bi-people"></i> My Members
                </a>
                <a class="btn td-btn-outline" asp-action="Edit" asp-route-id="@ViewData["Tid"]">
                    <i class="bi bi-person-circle"></i> View / Update Profile
                </a>
            </div>
        </div>
    </div>
</div>
