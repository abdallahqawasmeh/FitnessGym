<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Home/Plans/Card.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyGymSystem.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/darkly/bootstrap.min.css">

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />


</head>
<body class="d-flex flex-column min-vh-100">

    <header>


        <nav class="navbar navbar-expand-lg bg-primary bg-primary">
            <div class="container">

                <a class="navbar-brand fw-semibold" asp-action="Index" asp-controller="Admins">Dashboard</a>

                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarColor01">
                    <ul class="navbar-nav mb-2 mb-lg-0">



                        <li class="nav-item">
                            <a class="nav-link active" class="nav-link" asp-action="Index" asp-controller="Admins">
                                Home
                                <span class="visually-hidden">(current)</span>

                            </a>
                        </li>


                        <!-- Members Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" id="membersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-laptop me-2"></i>Members
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="membersDropdown">
                                <li><a class="dropdown-item" asp-action="Create" asp-controller="Members">Create</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Members">All Members</a></li>
                            </ul>
                        </li>

                        <!-- Trainers Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active"  id="trainersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-laptop me-2"></i>Trainers
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="trainersDropdown">
                                <li><a class="dropdown-item" asp-action="Create" asp-controller="Trainers">Create</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Trainers">All Trainers</a></li>
                            </ul>
                        </li>

                        <!-- MembershipPlans Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" id="plansDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-laptop me-2"></i>MembershipPlans
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="plansDropdown">
                                <li><a class="dropdown-item" asp-action="Create" asp-controller="Membershipplans">Create</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Membershipplans">All Memberships</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link  active"  role="button"  aria-expanded="false" asp-action="Report" asp-controller="Admins"> <i class="fa fa-laptop me-2"></i>Subscriptions Report</a>
                            </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link  active" role="button" aria-expanded="false" asp-action="ManageTestimonials" asp-controller="Admins"> <i class="fa fa-laptop me-2"></i>Testimonials</a>
                        </li>



                        <!-- More Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" id="profilDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-laptop me-2"></i>More
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="profilDropdown">
                                <li><a class="dropdown-item" asp-action="Details" asp-controller="Admins" asp-route-id="@ViewData["ad"]">profile</a></li>
                              


                                @if (ViewData["ad"] != null)
                                {
                                    <li>
                                        <a class="dropdown-item text-danger fw-semibold"
                                           href="javascript:void(0);"
                                           onclick="document.getElementById('logoutForm').submit();">
                                            Logout
                                        </a>
                                        <form id="logoutForm" asp-controller="Authentication" asp-action="Logout" method="post" style="display:none;"></form>
                                    </li>
                                }
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>




    </header>




    <div class="container">
        <main role="main" class="flex-fill pb-3">
        @RenderBody()
        </main>
    </div>





    <footer class="text-center text-lg-start text-white mt-auto" style="background-color:steelblue;">
        <div class="container p-4 pb-0">
            <section class="">
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 fw-bold">MyCompany</h6>
                        <p>Creative Bootstrap 5 components & modern UI blocks for your next project.</p>
                    </div>
                    <hr class="w-100 clearfix d-md-none" />
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 fw-bold">Products</h6>
                        <p><a class="text-white text-decoration-none" href="#">HTML</a></p>
                        <p><a class="text-white text-decoration-none" href="#">CSS</a></p>
                        <p><a class="text-white text-decoration-none" href="#">JavaScript</a></p>
                    </div>
                    <hr class="w-100 clearfix d-md-none" />
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 fw-bold">Contact</h6>
                        <p><i class="bi bi-house-door me-2"></i> Amman, Jordan</p>
                        <p><i class="bi bi-envelope me-2"></i> info@example.com</p>
                        <p><i class="bi bi-phone me-2"></i> +962 7 9999 9999</p>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 fw-bold">Follow us</h6>
                        <a class="btn btn-outline-light btn-floating m-1" href="#"><i class="bi bi-facebook"></i></a>
                        <a class="btn btn-outline-light btn-floating m-1" href="#"><i class="bi bi-twitter"></i></a>
                        <a class="btn btn-outline-light btn-floating m-1" href="#"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </section>
            <hr class="my-3" />
            <div class="text-center pb-3">
                © 2025 Copyright :
                <a class="text-white fw-bold text-decoration-none" href="#">MyCompany.com</a>
            </div>
        </div>
    </footer>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">




    <!-- Bootstrap 5 JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)







</body>
</html>
