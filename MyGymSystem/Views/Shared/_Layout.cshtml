<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyGymSystem</title>
    <link rel="stylesheet" href="~/Home/Plans/Card.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyGymSystem.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/flatly/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist//bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />


</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand fw-semibold"><b> FitPro</b></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor"
                        aria-controls="navbarColor" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor">
                    <!-- LEFT SIDE: links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="AboutUs" asp-controller="Home">AboutUs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Testimonials" asp-controller="Home">Testimonials</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="plans" asp-controller="Home">MembershipPlans</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Trainers" asp-controller="Home">Trainers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Contact" asp-controller="Home">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="MyPrivateWorkout" asp-controller="Home">PrivateWorkouts</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                More
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li>
                                    <a class="dropdown-item"
                                       asp-action="Edit"
                                       asp-controller="Members"
                                       asp-route-id="@ViewData["memid"]">
                                        Profile
                                    </a>
                                </li>

                                @if (ViewData["memid"] != null)
                                {
                                    <li>
                                        <a class="dropdown-item text-danger fw-semibold"
                                           href="javascript:void(0);"
                                           onclick="document.getElementById('logoutForm').submit();">
                                            Logout
                                        </a>
                                        <form id="logoutForm"
                                              asp-controller="Authentication"
                                              asp-action="Logout"
                                              method="post"
                                              style="display:none;">
                                        </form>
                                    </li>
                                }

                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- RIGHT SIDE: member name + avatar -->
                    @if (ViewData["memid"] != null)
                    {
                        <a class="d-flex align-items-center text-decoration-none text-white"
                           asp-action="Edit"
                           asp-controller="Members"
                           asp-route-id="@ViewData["memid"]">
                            <img src="@Url.Content(
                              ViewData["memImage"] != null
                                  ? $"~/Images/{ViewData["memImage"]}"
                                  : "~/Images/default.jpg")"
                                 alt="Profile"
                                 class="rounded-circle me-2"
                                 style="width:32px;height:32px;object-fit:cover;" />
                            <span>@(ViewData["name"] ?? "Member")</span>
                        </a>
                    }
                </div>
            </div>
        </nav>

     
    </header>
    <div class="container">
        <main role="main" class="flex-fill pb-3" >
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-lg-start text-white mt-auto" style="background-color:black;">
        <div class="container p-4 pb-0">
    <section class="">
      <div class="row">
        <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
          <h6 class="text-uppercase mb-4 fw-bold">MyCompany</h6>
          <p>Creative Bootstrap 5 components & modern UI blocks for your next project.</p>
        </div>
        <hr class="w-100 clearfix d-md-none"/>
        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
          <h6 class="text-uppercase mb-4 fw-bold">Products</h6>
          <p><a class="text-white text-decoration-none" href="#">HTML</a></p>
          <p><a class="text-white text-decoration-none" href="#">CSS</a></p>
          <p><a class="text-white text-decoration-none" href="#">JavaScript</a></p>
        </div>
        <hr class="w-100 clearfix d-md-none"/>
        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
          <h6 class="text-uppercase mb-4 fw-bold">Contact</h6>
          <p><i class="bi bi-house-door me-2"></i> Amman, Jordan</p>
          <p><i class="bi bi-envelope me-2"></i> info@example.com</p>
          <p><i class="bi bi-phone me-2"></i> +962 7 9999 9999</p>
        </div>
        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
          <h6 class="text-uppercase mb-4 fw-bold">Follow us</h6>
          <a class="btn btn-outline-light btn-floating m-1" href="#"><i class="bi bi-facebook"></i></a>
          <a class="btn btn-outline-light btn-floating m-1" href="#"><i class="bi bi-twitter"></i></a>
          <a class="btn btn-outline-light btn-floating m-1" href="#"><i class="bi bi-instagram"></i></a>
        </div>
      </div>
    </section>
    <hr class="my-3"/>
    <div class="text-center pb-3">
      © 2025 Copyright :
      <a class="text-white fw-bold text-decoration-none" href="#">MyCompany.com</a>
    </div>
  </div>
</footer>



    <!-- jQuery FIRST -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Owl Carousel AFTER jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

    <!-- Bootstrap (only once is enough) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Your site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
