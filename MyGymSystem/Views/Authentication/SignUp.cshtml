@model MyGymSystem.Models.ViewModels.SignUpVM
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FitPro</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- reuse your login styles -->
    <link rel="stylesheet" href="~/css/auth/login-bs.css" asp-append-version="true" />
    <!-- signup extra -->
    <link rel="stylesheet" href="~/css/auth/signup-bs.css" asp-append-version="true" />
</head>

<body class="bg-dark text-white">
    <div class="container-fluid min-vh-100">
        <div class="row min-vh-100">

            <!-- LEFT (form) -->
            <div class="col-12 col-lg-5 d-flex align-items-center justify-content-center p-4">
                <form asp-action="SignUp" method="post" enctype="multipart/form-data"
                      class="p-4 p-md-5 rounded-4 shadow-lg login-glass login-enter w-100"
                      style="max-width: 520px;">

                    @Html.AntiForgeryToken()

                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="rounded-4 px-3 py-2 fw-bold text-dark login-badge">MG</div>
                        <div>
                            <div class="fw-bold">FitPro</div>
                            <div class="text-white-50 small">Create your account</div>
                        </div>
                    </div>

                    <h3 class="fw-bold mb-1">Sign up</h3>
                    <p class="text-white-50 mb-3">Fill your details and start your fitness journey.</p>

                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label asp-for="Firstname" class="form-label text-white-50 small"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-white border-secondary">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="Firstname" class="form-control bg-transparent text-white border-secondary"
                                       placeholder="First name" />
                            </div>
                            <span asp-validation-for="Firstname" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Lastname" class="form-label text-white-50 small"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-white border-secondary">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="Lastname" class="form-control bg-transparent text-white border-secondary"
                                       placeholder="Last name" />
                            </div>
                            <span asp-validation-for="Lastname" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Email" class="form-label text-white-50 small"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-white border-secondary">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email" type="email"
                                       class="form-control bg-transparent text-white border-secondary"
                                       placeholder="name@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Phonenumber" class="form-label text-white-50 small"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-white border-secondary">
                                    <i class="bi bi-telephone"></i>
                                </span>
                                <input asp-for="Phonenumber" class="form-control bg-transparent text-white border-secondary"
                                       placeholder="+962..." />
                            </div>
                            <span asp-validation-for="Phonenumber" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Dateofbirth" class="form-label text-white-50 small"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-white border-secondary">
                                    <i class="bi bi-calendar3"></i>
                                </span>
                                <input asp-for="Dateofbirth" type="date"
                                       class="form-control bg-transparent text-white border-secondary" />
                            </div>
                            <span asp-validation-for="Dateofbirth" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Fitnessgoal" class="form-label text-white-50 small"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-white border-secondary">
                                    <i class="bi bi-bullseye"></i>
                                </span>
                                <input asp-for="Fitnessgoal" class="form-control bg-transparent text-white border-secondary"
                                       placeholder="Lose fat, build muscle, stay fit..." />
                            </div>
                            <span asp-validation-for="Fitnessgoal" class="text-danger small"></span>
                        </div>

                        <hr class="border-secondary my-1" />

                        <div class="col-12 col-md-6">
                            <label asp-for="Username" class="form-label text-white-50 small"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-white border-secondary">
                                    <i class="bi bi-at"></i>
                                </span>
                                <input asp-for="Username" class="form-control bg-transparent text-white border-secondary"
                                       placeholder="Choose a username" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="ImageFile" class="form-label text-white-50 small">Profile picture (optional)</label>
                            <input asp-for="ImageFile" type="file"
                                   class="form-control bg-transparent text-white border-secondary signup-file" />
                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Password" class="form-label text-white-50 small"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-white border-secondary">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input asp-for="Password" id="pass1" type="password"
                                       class="form-control bg-transparent text-white border-secondary"
                                       placeholder="Password" />
                                <button type="button" class="btn btn-outline-secondary" id="toggle1">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="ConfirmPassword" class="form-label text-white-50 small"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-white border-secondary">
                                    <i class="bi bi-shield-lock"></i>
                                </span>
                                <input asp-for="ConfirmPassword" id="pass2" type="password"
                                       class="form-control bg-transparent text-white border-secondary"
                                       placeholder="Confirm password" />
                                <button type="button" class="btn btn-outline-secondary" id="toggle2">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="col-12 d-grid gap-2 d-md-flex mt-2">
                            <button type="submit" class="btn btn-info fw-bold flex-fill">Create account</button>
                            <button type="button" class="btn btn-outline-light fw-bold flex-fill" onclick="goLogin()">Back to login</button>
                        </div>

                        <p class="text-center text-white-50 small mt-3 mb-0">
                            Already have an account?
                            <a asp-action="Login" asp-controller="Authentication"
                               class="link-info text-decoration-none">Sign in</a>
                        </p>
                    </div>
                </form>
            </div>

            <!-- RIGHT (image) -->
            <div class="col-12 col-lg-7 p-0 signup-bg d-flex align-items-end">
                <div class="p-4 p-md-5 w-100">
                    <div class="p-4 rounded-4 border border-white border-opacity-10 bg-black bg-opacity-25 login-glass" style="max-width:560px;">
                        <h4 class="fw-bold mb-1">START STRONG</h4>
                        <p class="text-white-75 mb-0">Create your profile and stay consistent — results will follow.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
        
            $(function () {
            const form = $("form");
            $.validator.unobtrusive.parse(form);

            form.find("input, select, textarea").on("keyup change blur", function () {
                $(this).valid(); // validate this field live
            });
          });
 

        function goLogin() {
            window.location.href = "@Url.Action("Login", "Authentication")";
        }

        function wireToggle(btnId, inputId) {
            const btn = document.getElementById(btnId);
            const input = document.getElementById(inputId);

            btn.addEventListener("click", () => {
                const isHidden = input.type === "password";
                input.type = isHidden ? "text" : "password";

                const icon = btn.querySelector("i");
                icon.classList.toggle("bi-eye", !isHidden);
                icon.classList.toggle("bi-eye-slash", isHidden);
            });
        }

        wireToggle("toggle1", "pass1");
        wireToggle("toggle2", "pass2");
    </script>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>




































