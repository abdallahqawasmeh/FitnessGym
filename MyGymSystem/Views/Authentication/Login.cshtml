@model MyGymSystem.Models.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FitPro</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/auth/login-bs.css" asp-append-version="true" />
</head>

<body class="bg-dark text-white">
    <div class="container-fluid min-vh-100">
        <div class="row min-vh-100">

            <!-- LEFT (form) -->
            <div class="col-12 col-lg-5 d-flex align-items-center justify-content-center p-4">
                <form method="post" asp-action="Login" class="p-4 p-md-5 rounded-4 shadow-lg login-glass login-enter w-100" style="max-width:420px;">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="rounded-4 px-3 py-2 fw-bold text-dark login-badge">MG</div>
                        <div>
                            <div class="fw-bold">FitPro</div>
                            <div class="text-white-50 small">Sign in to manage your fitness journey</div>
                        </div>
                    </div>

                    <h3 class="fw-bold mb-1">Welcome back</h3>
                    <p class="text-white-50 mb-4">Log in to continue. Keep pushing — your goals are closer than you think.</p>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label text-white-50 small">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-white border-secondary">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="Username" class="form-control bg-transparent text-white border-secondary"
                                   autocomplete="off" placeholder="Enter your username" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label text-white-50 small">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-white border-secondary">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Password" id="passwordInput" type="password"
                                   class="form-control bg-transparent text-white border-secondary"
                                   placeholder="Enter your password" />
                            <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>


                    <div class="d-grid gap-2 d-md-flex mt-4">
                        <button type="submit" class="btn btn-info fw-bold flex-fill">Login</button>
                        <button type="button"  class="btn btn-outline-light fw-bold flex-fill" onclick="go()">Sign Up</button>
                    </div>
                </form>
            </div>

            <!-- RIGHT (image) -->
            <div class="col-12 col-lg-7 p-0 login-bg d-flex align-items-end">
                <div class="p-4 p-md-5 w-100">
                    <div class="p-4 rounded-4 border border-white border-opacity-10 bg-black bg-opacity-25 login-glass" style="max-width:560px;">
                        <h4 class="fw-bold mb-1">TIME FOR FITNESS</h4>
                        <p class="text-white-75 mb-0">Consistency beats motivation. Log in, track your progress, and keep moving forward.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
        function go() {
            window.location.href = "@Url.Action("SignUp", "Authentication")";
        }

        const passwordInput = document.getElementById("passwordInput");
        const toggleBtn = document.getElementById("togglePassword");

        toggleBtn.addEventListener("click", () => {
            const isHidden = passwordInput.type === "password";
            passwordInput.type = isHidden ? "text" : "password";

            const icon = toggleBtn.querySelector("i");
            icon.classList.toggle("bi-eye", !isHidden);
            icon.classList.toggle("bi-eye-slash", isHidden);
        });
    </script>

    <partial name="_ValidationScriptsPartial" /> 
    <script>
        $(function () {
            const form = $("form");
            $.validator.unobtrusive.parse(form);

            form.find("input").on("keyup change blur", function () {
                $(this).valid();
            });
        });
    </script>

</body>
</html>
































