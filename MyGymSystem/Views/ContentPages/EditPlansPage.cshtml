@model MyGymSystem.Models.Membershipplanspage

@{
    ViewData["Title"] = "Edit Membership Plans Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string ImgOrDefault(string? path)
    {
        return Url.Content(!string.IsNullOrWhiteSpace(path) ? $"~/Images/{path}" : "~/Images/default.jpg");
    }
}

<section class="py-4">
    <div class="container">

        <!-- Header -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-4">
            <div>
                <h2 class="fw-bold mb-1">Membership Plans Page Content</h2>
                <p class="text-muted mb-0">Edit title, intro text, and banner image. All fields are optional.</p>
            </div>

            <div class="d-flex gap-2">
                <a asp-controller="Admins" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <button type="submit" form="plansForm" class="btn btn-primary">
                    <i class="bi bi-check2-circle"></i> Save Changes
                </button>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success d-flex align-items-center" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <div>@TempData["Success"]</div>
            </div>
        }

        <div class="row g-4">

            <!-- LEFT: FORM -->
            <div class="col-lg-7">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">

                        <form id="plansForm" asp-action="EditPlansPage" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <!-- key -->
                            <input type="hidden" asp-for="Membershipplanspageid" />

                            <!-- =========================
                                 PAGE CONTENT
                                 ========================= -->
                            <div class="mb-3 d-flex align-items-center justify-content-between">
                                <h5 class="fw-semibold mb-0">
                                    <i class="bi bi-window me-2 text-primary"></i>Header & Intro
                                </h5>
                                <span class="badge bg-light text-muted border">Optional</span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PageTitle" class="form-label">Page Title</label>
                                <input asp-for="PageTitle" class="form-control" placeholder="Example: Membership Plans" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="IntroText" class="form-label">Intro Text</label>
                                <textarea asp-for="IntroText" class="form-control" rows="4"
                                          placeholder="Short text above the plans list..."></textarea>
                            </div>

                            <hr class="my-4" />

                            <!-- =========================
                                 BANNER IMAGE
                                 ========================= -->
                            <div class="mb-3 d-flex align-items-center justify-content-between">
                                <h5 class="fw-semibold mb-0">
                                    <i class="bi bi-image me-2 text-info"></i>Banner Image
                                </h5>
                                <span class="badge bg-light text-muted border">Optional</span>
                            </div>

                            <div class="alert alert-info small mb-3">
                                <i class="bi bi-info-circle me-1"></i>
                                If you don’t upload a new banner, the previous one will stay.
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Upload New Banner</label>
                                <input asp-for="Bannerimage" type="file" class="form-control" accept="image/*" />
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted small">
                                    @if (Model.Lastupdated != null)
                                    {
                                        <span><i class="bi bi-clock me-1"></i>Last updated: @Model.Lastupdated</span>
                                    }
                                </div>

                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check2-circle"></i> Save
                                </button>
                            </div>
                        </form>

                    </div>
                </div>

                <!-- NOTE -->
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-body p-4">
                        <h6 class="fw-semibold mb-2">
                            <i class="bi bi-lightbulb me-2 text-warning"></i>Note
                        </h6>
                        <p class="text-muted small mb-0">
                            This page content controls the <b>header/intro/banner</b> only.
                            The actual membership plans list still comes from <b>Membershipplan</b> table.
                        </p>
                    </div>
                </div>
            </div>

            <!-- RIGHT: PREVIEW -->
            <div class="col-lg-5">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <h5 class="fw-semibold mb-3">
                            <i class="bi bi-eye me-2 text-primary"></i>Preview
                        </h5>

                        <div class="border rounded overflow-hidden mb-3">
                            <img src="@ImgOrDefault(Model.Bannerimagepath)"
                                 style="width:100%; height:220px; object-fit:cover;" />
                        </div>

                        <div class="p-3 rounded border bg-light">
                            <h4 class="fw-bold mb-2">@(!string.IsNullOrWhiteSpace(Model.PageTitle) ? Model.PageTitle : "Membership Plans")</h4>
                            <p class="text-muted mb-0">
                                @(!string.IsNullOrWhiteSpace(Model.IntroText) ? Model.IntroText : "Your intro text will appear here above the plans list.")
                            </p>
                        </div>

                        <div class="mt-3 small text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            This is only a preview of your header area.
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-body p-4">
                        <h6 class="fw-semibold mb-2">
                            <i class="bi bi-image-alt me-2 text-success"></i>Banner Tips
                        </h6>
                        <ul class="small text-muted mb-0">
                            <li>Best size: wide landscape (example: 1200×400).</li>
                            <li>Keep it not too busy so text stays readable.</li>
                            <li>If you leave it empty, a default image will show.</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
